<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TwitterDashboardChart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Retweet Bar Chart"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterRetweet"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Reply Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterReply"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Like Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterLike"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Quote Tweet Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterQuote"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="View Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Link Click Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterLink"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Profile Click Bar Chart"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_subtitle"
                />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barTwitterProfile"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
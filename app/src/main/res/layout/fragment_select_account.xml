<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SelectAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_account_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

        <Button
            android:id="@+id/select_account_btn"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/poppins_medium"
            android:text="Select Account"
            android:layout_below="@+id/select_account_recycler_view"
            android:background="@drawable/primary_button_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</FrameLayout>
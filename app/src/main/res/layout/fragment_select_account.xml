<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SelectAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_select_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Select your connected account"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_account_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/text_select_account"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/select_account_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button2"
            android:fontFamily="@font/poppins_medium"
            android:text="Select Account"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</FrameLayout>